{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions" : [
        {
            "name":"client",
            "image":"tqvdang/multi-client",
            "hostname":"client",
            "memoryReservation":"256",
            "essential":false
        },
        {
            "name":"server",
            "image":"tqvdang/multi-server",
            "hostname":"api",
            "memoryReservation":"256",
            "essential":false
        },
        {
            "name":"worker",
            "image":"tqvdang/multi-worker",
            "hostname":"worker",
            "memoryReservation":"256",
            "essential":false
        },
        {
            "name":"nginx",
            "image":"tqvdang/multi-nginx",
            "hostname":"nginx",
            "memoryReservation":"256",
            "essential":true,
            "portMappings": [
                {
                    "hostPort":80,
                    "containerPort": 80
                }
            ],
            "links":["client", "server"]
        }
    ]
}